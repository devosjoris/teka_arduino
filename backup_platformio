; PlatformIO Project Configuration File
;
;   Build options: build flags, source filter
;   Upload options: custom upload port, speed and extra flags
;   Library options: dependencies, extra library storages
;   Advanced options: extra scripting
;
; Please visit documentation for the other options and examples
; https://docs.platformio.org/page/projectconf.html

[env:esp32s3-dev]
platform = espressif32
; Hardware: ESP32-S3-WROOM-1-N16 (16MB flash, NO PSRAM)
; Note: we keep the closest Espressif DevKitC-1 definition and override flash settings.
board = esp32-s3-devkitc-1
framework = arduino
lib_extra_dirs = ~/Documents/Arduino/libraries

; Store logs in LittleFS (not NVS/Preferences)
board_build.filesystem = littlefs

upload_port = COM4
upload_speed = 115200
monitor_speed = 115200
monitor_filters = log2file

; Full flash erase before every upload (wipes NVS, LittleFS, etc.)
board_upload.erase_flash = true

; Keep in sync with your module wiring. Keeping DIO is fine/stable.
board_build.flash_mode = dio
board_build.f_flash = 80000000L

; Ensure OTA-capable partition layout (includes otadata, app0, app1)
; and maximize OTA slot size for 16MB flash.
board_build.partitions = default_16MB.csv

; IMPORTANT: keep this in sync with the selected board.
; This project targets 16MB flash.
board_build.flash_size = 16MB
board_upload.flash_size = 16MB
